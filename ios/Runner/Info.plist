<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" 
"http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>

  <!-- 1. TEMEL UYGULAMA BİLGİLERİ -->
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>

  <key>CFBundleDisplayName</key>
  <string>Kolay Hesap</string>

  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>

  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>

  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>

  <key>CFBundleName</key>
  <string>KolayHesap</string>

  <key>CFBundlePackageType</key>
  <string>APPL</string>

  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>

  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>

  <key>LSRequiresIPhoneOS</key>
  <true/>

  <!-- 2. LAUNCH SCREEN -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>

  <!-- 3. ANA STORYBOARD -->
  <key>UIMainStoryboardFile</key>
  <string>Main</string>

  <!-- 4. İZİNLER -->
  <key>NSCameraUsageDescription</key>
  <string>QR kod taramak için kameraya erişim gerekiyor.</string>

  <key>NSPhotoLibraryUsageDescription</key>
  <string>Bazı özellikler fotoğraf erişimi gerektirebilir.</string>

  <key>NSUserTrackingUsageDescription</key>
  <string>Size daha uygun reklamlar gösterebilmek için izin istenmektedir.</string>

  <!-- 5. APP TRANSPORT SECURITY -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>
    <false/>
  </dict>

  <!-- 6. PUSH NOTIFICATION -->
  <key>UIBackgroundModes</key>
  <array>
    <string>remote-notification</string>
  </array>

  <!-- 7. GOOGLE ADMOB -->
  <key>GADApplicationIdentifier</key>
  <string>ca-app-pub-3309512680871363~7032488847</string>

  <!-- 8. FIREBASE (MANUEL DELEGATE KULLANIYORSUN) -->
  <key>FirebaseAppDelegateProxyEnabled</key>
  <false/>

  <key>FirebaseAutomaticDataCollectionEnabled</key>
  <true/>

  <!-- 9. EKRAN YÖNLENDİRME (SADECE PORTRE) -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
  </array>

  <key>UISupportedInterfaceOrientations~ipad</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
  </array>

  <!-- 10. DOSYA PAYLAŞIMI -->
  <key>UIFileSharingEnabled</key>
  <true/>

  <key>LSSupportsOpeningDocumentsInPlace</key>
  <true/>

  <!-- 11. PERFORMANS -->
  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>

</dict>
</plist>
